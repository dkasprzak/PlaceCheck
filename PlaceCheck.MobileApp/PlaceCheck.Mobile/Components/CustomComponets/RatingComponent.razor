<MudStack Row="true" Spacing="0">
    @{
        for (int i = 0; i < Math.Floor(RatingValue); i++)
        {
            <MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Warning" />
        }

        var decimalPart = RatingValue - Math.Floor(RatingValue);
        if (decimalPart >= 0.5)
        {
            <MudIcon Icon="@Icons.Material.Filled.StarHalf" Color="Color.Warning" />
        }

        var emptyStars = 5 - Math.Floor(RatingValue);
        if (decimalPart >= 0.5) emptyStars -= 1;
            
        for (int i = 0; i < emptyStars; i++)
        {
            <MudIcon Icon="@Icons.Material.Filled.StarOutline" Color="Color.Warning" />
        }
    }
</MudStack>

@code {
[Parameter]
public double RatingValue { get; set; }
}