<MudAppBar Elevation="1" Class="mud-appbar">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(() => OpenDrawer())" />
    My Application
</MudAppBar>
<MudDrawer @bind-Open="@_open" Anchor="@_anchor" Elevation="1" Variant="@DrawerVariant.Temporary" OverlayAutoClose="@_overlayAutoClose">
    <NavMenu />
</MudDrawer>

@code {
    private bool _open;
    private Anchor _anchor = Anchor.Top;
    private bool _overlayAutoClose = true;

    private void OpenDrawer()
    {
        _open = !_open;
    }
}